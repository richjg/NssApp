<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NssApp.Settings">
    <ContentPage.Content>
        <StackLayout Padding="50">
            <Button Text="Cancel" Command="{Binding CancelEditSettingsCommand}" />
            <Button Text="Done" Command="{Binding DoneEditSettingsCommand}" />
            <Entry Placeholder="Url" Text="{Binding Url, Mode=TwoWay}" />
            <Entry Placeholder="Username" Text="{Binding Username, Mode=TwoWay}" />
            <Entry Placeholder="Password" IsPassword="true" Text="{Binding Password, Mode=TwoWay}" />
            <Label Text="{Binding LoginFaileMessage}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>